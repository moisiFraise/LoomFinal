<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="/css/clubePrincipal.css">
    <link rel="stylesheet" href="/css/menuClube.css">
    <link rel="stylesheet" href="/css/leituras.css">
    <link rel="stylesheet" href="/css/atualizacoes.css">
    <link rel="stylesheet" href="/css/encontros.css">
    <link rel="stylesheet" href="/css/sugestoes.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title><%= titulo %></title>
</head>
<body>
    <%- include('partials/menu') %>
    
    <section id="clube-principal">
        <div class="header-container">
            <h2 id="clube-titulo">Carregando...</h2>
            <div class="clube-acoes">
                <button id="botao-voltar" onclick="voltarParaTelaAnterior()">
                    <i class="fa fa-arrow-left"></i> Voltar
                </button>
            </div>
        </div>
        <div class="clube-content-wrapper">
            <%- include('partials/menuClube') %>
            <div class="clube-container">
                <!-- Seção Discussão -->
                <div id="secao-discussao" class="clube-secao">
                    <div class="clube-info-wrapper">
                        <div class="clube-info-card">
                            <h3 id="clube-nome"></h3>
                            <p id="clube-descricao"></p>
                            <div class="clube-meta">
                                <span id="clube-visibilidade" class="visibilidade-badge"></span>
                                <span id="clube-membros-count">0 membros</span>
                            </div>
                            <div id="clube-categorias" class="clube-categorias"></div>
                        </div>
                        
                        <div class="livro-atual-container">
                            <h4>Leitura Atual</h4>
                            <div id="livro-atual-info"></div>
                            <div id="leitura-atual-imagem-container" class="leitura-atual-imagem-container"></div>
                            <div id="leitura-atual-progresso" class="leitura-atual-progresso">
                                <div class="progresso-barra">
                                    <div class="progresso-preenchimento" style="width: 0%"></div>
                                </div>
                                <span class="progresso-texto">0% concluído</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="atualizacoes-container">
                        <div class="atualizacao-form">
                            <div class="atualizacao-form-header">
                                <h4>Compartilhe seu progresso de leitura</h4>
                                <button class="botao-moderno" onclick="abrirModalAtualizacao(event)">
                                    <i class="fa fa-plus"></i> Nova Atualização
                                </button>
                            </div>
                        </div>
                        
                        <div id="atualizacoes-lista">
                            <div class="sem-atualizacoes">
                                Nenhuma atualização de leitura disponível.
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Seção Leituras -->
                <div id="secao-livros-anteriores" class="clube-secao" style="display: none;">
                    <div class="leituras-header">
                        <h3>Leituras do Clube</h3>
                        <div id="botao-selecionar-leitura-container" style="display: none;">
                            <button class="botao-moderno" onclick="abrirModalSelecaoLeitura()">
                                <i class="fa fa-plus"></i> Selecionar Nova Leitura
                            </button>
                        </div>
                    </div>
                    
                    <div class="livro-atual-container">
                        <h4>Leitura Atual</h4>
                        <div id="livro-atual-info-completo"></div>
                    </div>
                    
                    <div class="leituras-container">
                        <h4>Leituras Anteriores</h4>
                        <div id="leituras-anteriores-grid" class="leituras-grid">
                        </div>
                    </div>
                </div>

                <!-- Seção de Sugestões de Livros -->
                <div id="secao-sugestoes-livros" class="clube-secao" style="display: none;">
                    <div class="sugestoes-header">
                        <h3>Sugestões de Livros</h3>
                        <button class="botao-moderno" onclick="abrirModalNovaSugestao()">
                            <i class="fa fa-plus"></i> Nova Sugestão
                        </button>
                    </div>
                    
                    <div id="sugestoes-lista" class="sugestoes-lista">
                        <div class="loading-sugestoes">
                            <i class="fa fa-spinner fa-spin"></i>
                            <p>Carregando sugestões...</p>
                        </div>
                    </div>
                </div>
                
                <!-- Seção de Encontros -->
                <div id="secao-encontros" class="clube-secao" style="display: none;">
                    <div class="encontros-header">
                        <h3>Encontros do Clube</h3>
                        <div id="botao-agendar-encontro-container" style="display: none;">
                            <button class="botao-moderno" onclick="abrirModalCriarEncontro()">
                                <i class="fa fa-plus"></i> Agendar Novo Encontro
                            </button>
                        </div>
                    </div>
                    
                    <div id="encontros-lista" class="encontros-lista">
                        <div class="sem-encontros">
                            Carregando encontros...
                        </div>
                    </div>
                </div>
                
                <!-- Seção Membros -->
                <div id="secao-membros" class="clube-secao" style="display: none;">
                    <h3>Membros do Clube</h3>
                    <div id="clube-membros-lista-completa"></div>
                </div>

                <!-- Seção Decidir Livro -->
                <div id="secao-decidir-livro" class="clube-secao" style="display: none;">
                    <h3>Decidir Próximo Livro</h3>
                    <div id="votacao-container">
                        <p>Funcionalidade de votação em desenvolvimento...</p>
                    </div>
                </div>

                <!-- Seção Configurações -->
                <div id="secao-configuracoes-clube" class="clube-secao" style="display: none;">
                    <h3>Configurações do Clube</h3>
                    <div id="configuracoes-container">
                        <p>Configurações do clube em desenvolvimento...</p>
                    </div>
                </div>
                
                <!-- Modal de Nova Sugestão -->
                <div id="overlay-sugestao" class="overlay-sugestao" style="display: none;"></div>
                <div id="modal-nova-sugestao" class="modal-sugestao" style="display: none;">
                    <form id="form-nova-sugestao">
                        <h2>Nova Sugestão de Livro</h2>
                        
                        <!-- Busca de livros -->
                        <div id="busca-container" class="busca-container">
                            <p class="form-subtitulo">Buscar por título ou autor</p>
                            <div class="search-input">
                                <input type="text" id="busca-livro-sugestao" placeholder="Digite o título ou autor do livro">
                                <button type="button" class="botao-moderno" onclick="buscarLivrosSugestao()">
                                    <i class="fa fa-search"></i> Buscar
                                </button>
                            </div>
                            
                            <div id="search-results-sugestao" class="search-results">
                            </div>
                        </div>
                        
                        <!-- Container do livro selecionado -->
                        <div id="selected-book-container-sugestao" style="display: none;" class="selected-book">
                            <div class="selected-book-header">
                                <div id="selected-book-cover-sugestao" class="selected-book-cover"></div>
                                <div class="selected-book-info">
                                    <h4 id="selected-book-title-sugestao"></h4>
                                    <p id="selected-book-author-sugestao"></p>
                                    <p id="selected-book-pages-sugestao"></p>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label for="sugestao-justificativa-selected">Por que você sugere este livro?</label>
                                <textarea id="sugestao-justificativa-selected" rows="4" placeholder="Explique por que este livro seria uma boa escolha para o clube..."></textarea>
                            </div>
                        </div>
                        
                        <div class="form-actions">
                            <button type="button" class="botao-sugerir" onclick="salvarNovaSugestao()" style="display: none;">
                                <i class="fa fa-check"></i> Criar Sugestão
                            </button>
                            <button type="button" class="botao-cancelar" onclick="fecharModalNovaSugestao()">
                                <i class="fa fa-times"></i> Cancelar
                            </button>
                        </div>
                    </form>
                </div>
                
                <!-- Overlay e Modais -->
                <div id="overlay" class="overlay" style="display: none;"></div>
                
                <!-- Modal de Seleção de Leitura -->
                <div class="form-container" id="modal-selecao-leitura" style="display: none;">
                    <form id="form-selecao-leitura">
                        <h2>Selecionar Nova Leitura</h2>
                        
                        <!-- Abas de navegação -->
                        <div class="tabs-container">
                            <div class="tab-item tab-ativo" data-tab="buscar" onclick="mudarTabSelecaoLeitura('buscar')">
                                <i class="fa fa-search"></i> Buscar Livros
                            </div>
                            <div class="tab-item" data-tab="sugestoes" onclick="mudarTabSelecaoLeitura('sugestoes')">
                                <i class="fa fa-lightbulb-o"></i> Sugestões dos Membros
                            </div>
                        </div>
                        
                        <!-- Conteúdo da aba Buscar -->
                        <div id="tab-buscar" class="tab-content" style="display: block;">
                            <p class="form-subtitulo">Buscar por título ou autor</p>
                            <div class="search-container">
                                <div class="search-input">
                                    <input type="text" id="busca-livro" placeholder="Digite o título ou autor do livro">
                                    <button type="button" class="botao-moderno" onclick="buscarLivros()">Buscar</button>
                                </div>
                            </div>
                            
                            <div id="search-results" class="search-results">
                            </div>
                        </div>
                        
                        <!-- Conteúdo da aba Sugestões -->
                        <div id="tab-sugestoes" class="tab-content" style="display: none;">
                            <p class="form-subtitulo">Sugestões dos membros do clube</p>
                            <div id="sugestoes-lista-modal" class="sugestoes-lista">
                                <div class="carregando">Carregando sugestões...</div>
                            </div>
                        </div>
                        
                        <div id="selected-book-container" style="display: none;" class="selected-book">
                            <div id="selected-book-cover" class="selected-book-cover"></div>
                            <div class="selected-book-info">
                                <h4 id="selected-book-title"></h4>
                                <p id="selected-book-author"></p>
                                <p id="selected-book-pages"></p>
                                <div class="form-group">
                                    <label for="data-inicio">Data de Início*</label>
                                    <input type="date" id="data-inicio" required>
                                    <small class="form-help">A data de início não pode ser anterior a hoje</small>
                                </div>
                                <div class="form-group">
                                    <label for="data-fim">Data de Término Previsto</label>
                                    <input type="date" id="data-fim">
                                    <small class="form-help">Opcional - deixe em branco se não souber</small>
                                </div>
                            </div>
                        </div>
                        
                        <button type="button" id="confirmarLeitura" class="botao-moderno" onclick="salvarNovaLeitura()">Confirmar</button>
                        <button type="button" id="cancelarLeitura" onclick="fecharModalSelecaoLeitura()">Cancelar</button>
                    </form>
                </div>
                
                <!-- Modal de Atualização -->
                <div id="overlay-atualizacao" class="overlay"></div>
                <div id="modal-atualizacao">
                    <form id="form-atualizacao">
                        <h2 id="modal-titulo">Nova Atualização de Leitura</h2>
                        
                        <div class="form-group">
                            <p class="form-subtitulo">O que você está achando da leitura?</p>
                            <textarea id="atualizacao-comentario" class="atualizacao-input" 
                                placeholder="Compartilhe seus pensamentos, impressões ou citações favoritas do livro..." required></textarea>
                        </div>
                                                        <div class="form-group">
                            <div class="pagina-input-container">
                                <div>
                                    <label for="atualizacao-pagina">Página atual</label>
                                    <input type="number" id="atualizacao-pagina" class="pagina-input" min="1" required>
                                </div>
                                <div id="porcentagem-container" class="porcentagem-leitura">
                                    <span id="porcentagem-valor">0%</span> concluído
                                </div>
                            </div>
                            <div class="progresso-visualizacao">
                                <div class="progresso-barra">
                                    <div id="progresso-preview" class="progresso-preenchimento" style="width: 0%"></div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-actions">
                            <button type="button" id="confirmarAtualizacao" class="botao-moderno" onclick="salvarAtualizacao()">
                                <i class="fa fa-check"></i> Publicar Atualização
                            </button>
                            <button type="button" id="cancelarAtualizacao" onclick="fecharModalAtualizacao()">
                                <i class="fa fa-times"></i> Cancelar
                            </button>
                        </div>
                    </form>
                </div>
                
                <!-- Modal de Encontro -->
                <div id="modal-encontro" class="modal-encontro" style="display: none;">
                    <h2 id="modal-titulo-encontro">Agendar Novo Encontro</h2>
                    <form id="form-encontro" class="form-encontro" onsubmit="salvarEncontro(event)">
                        <input type="hidden" id="encontro-id">
                    
                        <div class="form-group">
                            <label for="titulo-encontro">Título*</label>
                            <input type="text" id="titulo-encontro" placeholder="Ex: Discussão do capítulo 5" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="descricao-encontro">Descrição</label>
                            <textarea id="descricao-encontro" rows="3" placeholder="Detalhes sobre o encontro..."></textarea>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="data-encontro">Data*</label>
                                <input type="date" id="data-encontro" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="hora-inicio">Horário de início*</label>
                                <input type="time" id="hora-inicio" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="hora-fim">Horário de término</label>
                                <input type="time" id="hora-fim">
                            </div>
                        </div>
                        
                        <div class="form-group tipo-encontro-container">
                            <label>Tipo de encontro*</label>
                            <div class="tipo-encontro-opcoes">
                                <label class="tipo-encontro-opcao">
                                    <input type="radio" name="tipo-encontro" value="online" checked> Online
                                </label>
                                <label class="tipo-encontro-opcao">
                                    <input type="radio" name="tipo-encontro" value="presencial"> Presencial
                                </label>
                                <label class="tipo-encontro-opcao">
                                    <input type="radio" name="tipo-encontro" value="hibrido"> Híbrido
                                </label>
                            </div>
                        </div>
                        
                        <div class="campos-local">
                            <div class="form-group">
                                <label for="local-encontro">Local do encontro*</label>
                                <input type="text" id="local-encontro" placeholder="Ex: Biblioteca Municipal, Sala 3">
                            </div>
                        </div>
                        
                        <div class="campos-link">
                            <div class="form-group">
                                <label for="link-encontro">Link do encontro*</label>
                                <input type="url" id="link-encontro" placeholder="Ex: https://meet.google.com/...">
                            </div>
                        </div>
                        
                        <div class="form-actions">
                            <button type="submit" class="botao-moderno">
                                <i class="fa fa-save"></i> Salvar
                            </button>
                            <button type="button" class="botao-cancelar" onclick="fecharModalEncontro()">
                                <i class="fa fa-times"></i> Cancelar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script>
        const clubeId = '<%= clubeId %>';
        const userId = '<%= userId %>';
    </script>
    <script src="/js/clubePrincipal.js"></script>
    <script src="/js/atualizacoes.js"></script>
    <script src="/js/encontros.js"></script>
    <script src="/js/curtidas.js"></script>
    <script src="/js/sugestoes.js"></script>
    <%- include('partials/imports') %>
</body>
</html>

                        
