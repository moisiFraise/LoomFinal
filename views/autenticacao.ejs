<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- HEADERS ANTI-CACHE NUCLEAR -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate, max-age=0">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <meta name="cache-control" content="no-cache">
    <meta name="cache-bust" content="<%= Date.now() %>">
    <%- include('partials/favicon') %>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/autenticacao.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>Loom - Login e Cadastro</title>
</head>
<body>
    <%- include('partials/imports') %>

    <div class="form-container">
        <div class="abas">
            <button class="botao-aba ativo" data-aba="login">Login</button>
            <button class="botao-aba" data-aba="registro">Cadastro</button>
        </div>
        
        <div class="conteudo-aba ativo" id="login">
            <h2>Bem-vindo de volta!</h2>
            
            <script>
                // Verificar se h√° mensagem de erro na URL
                const urlParams = new URLSearchParams(window.location.search);
                const erro = urlParams.get('erro');
                
                if (erro === 'usuario_suspenso') {
                    const mensagemErro = document.createElement('div');
                    mensagemErro.className = 'mensagem-erro';
                    mensagemErro.style.cssText = 'background: #ff4757; color: white; padding: 15px; margin-bottom: 20px; border-radius: 8px; text-align: center; font-weight: 500;';
                    mensagemErro.textContent = 'Sua conta foi suspensa por viola√ß√£o das regras da comunidade. Entre em contato com o suporte para mais informa√ß√µes.';
                    
                    const h2 = document.querySelector('#login h2');
                    h2.parentNode.insertBefore(mensagemErro, h2.nextSibling);
                }
            </script>
            
            <form id="formulario-login">
                <div class="grupo-formulario">
                    <label for="login-email">Email</label>
                    <input type="email" id="login-email" placeholder="Seu email" required>
                </div>
                <div class="grupo-formulario">
                    <label for="login-senha">Senha</label>
                    <div class="input-container">
                        <input type="password" id="login-senha" placeholder="Sua senha" required>
                        <button type="button" class="toggle-password" data-target="login-senha"><i class="fas fa-eye"></i></button>
                    </div>
                </div>
                <button type="submit" class="botao botao-primario">Entrar</button>
                <div class="esqueci-senha">
                    <a href="#" id="link-esqueci-senha">Esqueci minha senha</a>
                </div>
            </form>
        </div>
        
        <div class="conteudo-aba" id="registro">
            <h2>Crie sua conta</h2>
            <form id="formulario-registro">
                <div class="grupo-formulario">
                    <label for="registro-nome">Nome</label>
                    <input type="text" id="registro-nome" placeholder="Seu nome completo" required>
                </div>
                <div class="grupo-formulario">
                    <label for="registro-email">Email</label>
                    <input type="email" id="registro-email" placeholder="Seu melhor email" required>
                </div>
                <div class="grupo-formulario">
                    <label for="registro-senha">Senha</label>
                    <div class="input-container">
                        <input type="password" id="registro-senha" placeholder="Crie uma senha forte" required>
                        <button type="button" class="toggle-password" data-target="registro-senha"><i class="fas fa-eye"></i></button>
                    </div>
                </div>
                <div class="grupo-formulario">
                    <label for="registro-confirmar-senha">Confirmar Senha</label>
                    <div class="input-container">
                        <input type="password" id="registro-confirmar-senha" placeholder="Confirme sua senha" required>
                        <button type="button" class="toggle-password" data-target="registro-confirmar-senha"><i class="fas fa-eye"></i></button>
                    </div>
                </div>
                <button type="submit" class="botao botao-primario">Cadastrar</button>
            </form>
        </div>
    </div>

    <!-- Modal Esqueci Minha Senha -->
    <div id="modal-esqueci-senha" class="modal-overlay" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>üîê Esqueci Minha Senha</h3>
                <button class="modal-close" id="fechar-modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Digite seu email para receber as instru√ß√µes de como redefinir sua senha:</p>
                
                <form id="formulario-esqueci-senha">
                    <div class="grupo-formulario">
                        <label for="email-recuperacao">Email</label>
                        <input type="email" id="email-recuperacao" placeholder="Digite seu email" required>
                    </div>
                    <div class="modal-buttons">
                        <button type="button" class="botao botao-secundario" id="cancelar-recuperacao">Cancelar</button>
                        <button type="submit" class="botao botao-primario" id="enviar-recuperacao">
                            <span class="loading-text" style="display: none;">‚è≥ Enviando...</span>
                            <span class="normal-text">üìß Enviar</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Container para mensagens -->
    <div id="mensagem-container"></div>
    
    <script src="/js/autenticacao.js"></script>
</body>
</html>
