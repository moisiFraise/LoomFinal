                    }
                    
                    for (let reg of registrations) {
                        await reg.unregister();
                        log('âœ… SW desregistrado: ' + reg.scope.substring(0, 50) + '...');
                    }
                    log('âœ… Todos os service workers removidos!');
                } else {
                    log('âš ï¸ Service Worker nÃ£o suportado neste navegador');
