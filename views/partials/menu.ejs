<head>
<meta name="theme-color" content="##6c5ce7" media="(prefers-color-scheme: light)">
</head>

<nav class="barra-navegacao" id="barra-navegacao">
    <div class="logo-container">
        <span class="texto-logo">Loom</span>
        <button type="button" class="botao-menu" id="botao-menu">
            <i class="fa fa-bars"></i>
        </button>
    </div>
    <div class="links-navegacao" id="links-navegacao">
        <% if (typeof userType !== 'undefined' && userType === 'admin') { %>
            <!-- Menu simplificado para administradores -->
            <a href="/painelAdmin">
                <i class="fa fa-database"></i>
                <span>Painel Admin</span>
            </a>
            <a href="/autenticacao">
                <i class="fa fa-power-off"></i>
                <span>Sair</span>
            </a>
        <% } else { %>
            <!-- Menu completo para usuários comuns -->
            <a href="/dashboard">
                <i class="fa fa-home"></i>
                <span>Início</span>
            </a>
            <a href="/explorar">
                <i class="fa fa-compass"></i>
                <span>Explorar</span>
            </a>
            <a href="/meuPerfil">
                <i class="fa fa-user"></i>
                <span>Meu Perfil</span>
            </a>
            <a href="/autenticacao">
                <i class="fa fa-power-off"></i>
                <span>Sair</span>
            </a>
        <% } %>
    </div>
</nav>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const botaoMenu = document.getElementById('botao-menu');
    const linksNavegacao = document.getElementById('links-navegacao');
    
    if (botaoMenu) {
        botaoMenu.addEventListener('click', function() {
            linksNavegacao.classList.toggle('ativo');
        });
    }
});
</script>
