<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <%- include('partials/favicon') %>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/criarClube.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <%- include('partials/imports') %>

<style>
        body {
            background: var(--current-line);
            color: var(--foreground);
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 20px;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .reset-container {
            max-width: 450px;
            width: 85%;
            padding: 30px;
            background: var(--current-line);
            border: 2px solid var(--roxo);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(189, 147, 249, 0.3);
            position: relative;
        }
        
        .reset-header {
            text-align: center;
            margin-bottom: 25px;
        }
        
        .reset-header .logo {
            color: var(--roxo);
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 10px;
            background: linear-gradient(90deg, var(--roxo), var(--rosa));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .reset-header h1 {
            color: var(--foreground);
            font-size: 1.8rem;
            margin: 0 0 10px 0;
            font-weight: 600;
        }
        
        .reset-header p {
            color: var(--paragrafo);
            margin: 0;
            font-size: 14px;
        }
        
        .form-subtitulo {
            display: block;
            margin: 15px 0 8px 0;
            color: var(--foreground);
            font-size: 14px;
            font-weight: 500;
        }
        
        input[type="password"] {
            width: 100%;
            height: 38px;
            padding: 12px 16px;
            border: 2px solid var(--comment);
            border-radius: 8px;
            font-size: 14px;
            background: var(--background);
            color: var(--foreground);
            transition: all 0.2s ease;
            box-sizing: border-box;
        }
        
        input[type="password"]:focus {
            outline: none;
            border-color: var(--roxo);
            box-shadow: 0 0 0 3px rgba(189, 147, 249, 0.1);
        }
        
        input[type="password"]::placeholder {
            color: var(--comment);
        }
        
        .form-buttons {
            margin-top: 25px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        
        .botao-padrao {
            padding: 12px 24px;
            border-radius: 8px;
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
            cursor: pointer;
            font-size: 15px;
            border: none;
            position: relative;
            overflow: hidden;
            z-index: 1;
            color: white;
            width: 100%;
            background: linear-gradient(45deg, var(--roxo), var(--rosa));
        }
        
        .botao-padrao:hover {
            transform: translateY(-2px);
            box-shadow: 0 7px 14px rgba(108, 92, 231, 0.2);
        }
        
        .botao-padrao:disabled {
            background: var(--comment);
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        
        .botao-secundario {
            background: transparent;
            border: 2px solid var(--comment);
            color: var(--paragrafo);
            padding: 10px 24px;
            border-radius: 8px;
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
            font-size: 14px;
        }
        
        .botao-secundario:hover {
            background-color: var(--current-line);
            border-color: var(--roxo);
            color: var(--roxo);
        }
        
        .alert {
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 15px;
            font-size: 14px;
            font-weight: 500;
            border-left: 4px solid;
        }
        
        .alert-error {
            background-color: rgba(214, 48, 49, 0.08);
            border-left-color: var(--vermelho);
            color: var(--vermelho);
        }
        
        .alert-success {
            background-color: rgba(0, 184, 148, 0.08);
            border-left-color: var(--ciano);
            color: var(--ciano);
        }
        
        .loading {
            display: none;
        }
        
        /* Responsividade */
        @media (max-width: 768px) {
            .reset-container {
                width: 90%;
                padding: 20px;
            }
            
            .reset-header .logo {
                font-size: 2rem;
            }
            
            .reset-header h1 {
                font-size: 1.5rem;
            }
        }
        
        @media (max-width: 480px) {
            body {
                padding: 10px;
            }
            
            .reset-container {
                width: 95%;
                padding: 15px;
            }
            
            .reset-header .logo {
                font-size: 1.8rem;
            }
            
            .reset-header h1 {
                font-size: 1.3rem;
            }
            
            input[type="password"] {
                height: 42px;
                font-size: 16px; /* Evita zoom em iOS */
            }
        }
    </style>
</head>
<body>
    <%- include('partials/imports') %>
    
    <div class="reset-container">
        <div class="reset-header">
            <div class="logo"><i class="fas fa-book-open"></i> Loom</div>
            <h1>Redefinir Senha</h1>
            <p>Digite sua nova senha abaixo</p>
        </div>
        
        <div id="alertContainer"></div>
        
        <form id="resetForm">
            <input type="hidden" id="token" value="<%= token %>">
            
            <p class="form-subtitulo">Nova Senha</p>
            <input type="password" id="novaSenha" name="novaSenha" placeholder="Digite sua nova senha" required minlength="6">
            
            <p class="form-subtitulo">Confirmar Nova Senha</p>
            <input type="password" id="confirmarSenha" name="confirmarSenha" placeholder="Confirme sua nova senha" required minlength="6">
            
            <div class="form-buttons">
                <button type="submit" class="botao-padrao" id="btnReset">
                    <span class="loading"><i class="fas fa-spinner fa-spin"></i> Redefinindo...</span>
                    <span class="normal"> Redefinir Senha</span>
                </button>
                
                <a href="/autenticacao" class="botao-secundario">
                    <i class="fas fa-arrow-left"></i> Voltar para o Login
                </a>
            </div>
        </form>
    </div>

    <script>
        document.getElementById('resetForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const token = document.getElementById('token').value;
            const novaSenha = document.getElementById('novaSenha').value;
            const confirmarSenha = document.getElementById('confirmarSenha').value;
            const btnReset = document.getElementById('btnReset');
            const alertContainer = document.getElementById('alertContainer');
            
            // Validações do frontend
            if (novaSenha.length < 6) {
                showAlert('A senha deve ter pelo menos 6 caracteres', 'error');
                return;
            }
            
            if (novaSenha !== confirmarSenha) {
                showAlert('As senhas não coincidem', 'error');
                return;
            }
            
            // Mostrar loading
            btnReset.disabled = true;
            btnReset.querySelector('.loading').style.display = 'inline';
            btnReset.querySelector('.normal').style.display = 'none';
            
            try {
                const response = await fetch('/api/reset-senha', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        token,
                        novaSenha,
                        confirmarSenha
                    })
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    showAlert(data.mensagem, 'success');
                    
                    // Redirecionar para login após 3 segundos
                    setTimeout(() => {
                        window.location.href = '/autenticacao?sucesso=senha_redefinida';
                    }, 3000);
                } else {
                    showAlert(data.erro || 'Erro ao redefinir senha', 'error');
                }
                
            } catch (error) {
                console.error('Erro:', error);
                showAlert('Erro de conexão. Tente novamente.', 'error');
            } finally {
                // Esconder loading
                btnReset.disabled = false;
                btnReset.querySelector('.loading').style.display = 'none';
                btnReset.querySelector('.normal').style.display = 'inline';
            }
        });
        
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alertClass = type === 'error' ? 'alert-error' : 'alert-success';
            
            alertContainer.innerHTML = `<div class="alert ${alertClass}">${message}</div>`;
            
            // Auto-hide success messages
            if (type === 'success') {
                setTimeout(() => {
                    alertContainer.innerHTML = '';
                }, 5000);
            }
        }
        
        // Verificar se as senhas coincidem em tempo real
        document.getElementById('confirmarSenha').addEventListener('input', () => {
            const novaSenha = document.getElementById('novaSenha').value;
            const confirmarSenha = document.getElementById('confirmarSenha').value;
            
            if (confirmarSenha && novaSenha !== confirmarSenha) {
                document.getElementById('confirmarSenha').style.borderColor = '#ff7675';
            } else {
                document.getElementById('confirmarSenha').style.borderColor = '#ddd';
            }
        });
    </script>
</body>
</html>
