<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="/css/atualizacoesLeitura.css">
    <link rel="stylesheet" href="/css/atualizacoes.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Atualizações - <%= tituloLeitura %></title>
</head>
<body>
    <%- include('partials/menu') %>
    
    <section id="atualizacoes-leitura">
        <div class="header-container">
            <div class="header-info">
                <button id="botao-voltar" onclick="voltarParaClube()">
                    <i class="fa fa-arrow-left"></i> Voltar ao Clube
                </button>
                <div class="leitura-header">
                    <h2>Atualizações de Leitura</h2>
                    <h3 id="titulo-leitura"><%= tituloLeitura %></h3>
                </div>
            </div>
        </div>
        
        <div class="atualizacoes-container">
            <div class="leitura-info-card" id="leitura-info-card">
                <!-- Informações da leitura serão carregadas aqui -->
            </div>
            
            <div class="filtros-container">
                <div class="filtros-opcoes">
                    <button class="filtro-btn ativo" data-filtro="todos" onclick="filtrarAtualizacoes('todos')">
                        <i class="fa fa-list"></i> Todas
                    </button>
                    <button class="filtro-btn" data-filtro="meus" onclick="filtrarAtualizacoes('meus')">
                        <i class="fa fa-user"></i> Minhas
                    </button>
                    <button class="filtro-btn" data-filtro="outros" onclick="filtrarAtualizacoes('outros')">
                        <i class="fa fa-users"></i> Outros Membros
                    </button>
                </div>
                
                <div class="ordenacao-opcoes">
                    <select id="ordenacao" onchange="ordenarAtualizacoes()">
                        <option value="recente">Mais Recentes</option>
                        <option value="antigo">Mais Antigas</option>
                        <option value="progresso">Por Progresso</option>
                    </select>
                </div>
            </div>
            
            <div id="atualizacoes-lista" class="atualizacoes-lista">
                <div class="carregando">
                    <i class="fa fa-spinner fa-spin"></i>
                    <p>Carregando atualizações...</p>
                </div>
            </div>
        </div>
    </section>

    <script>
        const clubeId = '<%= clubeId %>';
        const idLeitura = '<%= idLeitura %>';
        const userId = '<%= userId %>';
        const tituloLeitura = '<%= tituloLeitura %>';
    </script>
    <script src="/js/curtidas.js"></script>
    <script src="/js/atualizacoesLeitura.js"></script>
    <script src="/js/comentarios.js"></script>
    <script src="/js/giphy.js"></script>
    <%- include('partials/imports') %>
</body>
</html>
